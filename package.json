{
  "license": "MIT",
  "scripts": {
    "dev": "docker-compose up -d && yarn migrate",
    "dev:down": "docker-compose down",
    "dev:clean": "docker-compose down -v",
    "prod": "docker-compose -f prod.docker-compose.yml up -d",
    "prod:pull": "docker-compose -f prod.docker-compose.yml pull api",
    "prod:down": "docker-compose -f prod.docker-compose.yml down",
    "prod:clean": "docker-compose -f prod.docker-compose.yml down -v",
    "migrate": "node node_modules/db-migrate/bin/db-migrate -m ./migrations -e pg up",
    "migrate:down": "node node_modules/db-migrate/bin/db-migrate -m ./migrations -e pg down",
    "migrate:create": "node node_modules/db-migrate/bin/db-migrate create addRefreshToken -e pg --sql-file",
    "logs": "docker-compose logs --follow",
    "copyTypes": "cp -r ./types ./api/src && cp -r ./types ./web/src"
  },
  "dependencies": {
    "@types/koa": "^2.13.5",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2"
  }
}
