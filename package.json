{
  "name": "rollmein",
  "version": "1.0.0",
  "description": "Web and React native app to choose who is going on the mythic + dungeon from a guild or custom list",
  "main": "index.js",
  "scripts": {
    "start": "run-s setup:db-migrate start:api",
    "dev": "run-p start:api-dev start:web",
    "build": "run-s build:react copy-to-api setup:db-production",
    "build:react": "cd web && npm run build",
    "setup:dev": "run-s install:*",
    "start:api": "cd api && npm start",
    "start:api-dev": "cd api && npm run dev",
    "start:web": "cd web && npm start",
    "install:top_level": "npm i",
    "install:api_dependencies": "cd api && npm i",
    "install:web_dependencies": "cd web && npm i",
    "setup:db-migrate": "cd api && npm run db:migrate",
    "setup:db-development": "cd api && npm run reset_db",
    "copy-to-api": "node file-copy.mjs"
  },
  "author": "Scott Key <scottdkey@gmail.com> (www.github.com/scottdkey)",
  "license": "MIT",
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
