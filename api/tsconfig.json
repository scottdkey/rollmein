{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "allowJs": true,
    "outDir": "./build",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "src/db/migrations"],
  "exclude": ["node_modules"]
}
